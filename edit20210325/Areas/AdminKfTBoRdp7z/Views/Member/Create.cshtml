@model edit20210325.Models.MemberModel

@{
    ViewData["Title"] = "會員資料註冊";
    ViewData["ＰageCtrl"] = "2";
}

<h1>會員資料註冊</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MemberGmail" class="control-label"></label>
                <input asp-for="MemberGmail" class="form-control" />
                <span asp-validation-for="MemberGmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberName" class="control-label"></label>
                <input asp-for="MemberName" class="form-control" />
                <span asp-validation-for="MemberName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberIden" class="control-label"></label>
                <input asp-for="MemberIden" class="form-control" />
                <span asp-validation-for="MemberIden" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberPhone" class="control-label"></label>
                <input asp-for="MemberPhone" class="form-control" />
                <span asp-validation-for="MemberPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberCompany" class="control-label"></label>
                <input asp-for="MemberCompany" class="form-control" />
                <span asp-validation-for="MemberCompany" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberRemarks1" class="control-label"></label>
                <input asp-for="MemberRemarks1" class="form-control" />
                <span asp-validation-for="MemberRemarks1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberRemarks2" class="control-label"></label>
                <input asp-for="MemberRemarks2" class="form-control" />
                <span asp-validation-for="MemberRemarks2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberCreateDate" class="control-label"></label>
                <input asp-for="MemberCreateDate" type="date" asp-format="{0:yyyy-MM-dd}" class="form-control" />
                <span asp-validation-for="MemberCreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberChangeDate" class="control-label"></label>
                <input asp-for="MemberChangeDate" type="date" asp-format="{0:yyyy-MM-dd}" class="form-control" />
                <span asp-validation-for="MemberChangeDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="建立" class="btn btn-primary onDivLeft" />

                <button id="btnExit" class="btn btn-primary onDivRight cancel" asp-action="exit">取消</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
